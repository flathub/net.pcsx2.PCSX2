{
    "app-id": "net.pcsx2.PCSX2",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "18.08",
    "command": "PCSX2",
    "rename-desktop-file": "PCSX2.desktop",
    "rename-icon": "PCSX2",
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=host:ro"
    ],
    "modules": [
      {
          "name": "wxWidgets",
          "cleanup": [
              "/bin",
              "/include",
              "/share/bakefile",
              "/share/aclocal",
              "/lib/wx/include"
          ],
          "config-opts": [
              "--with-opengl",
              "--with-libjpeg",
              "--with-libpng",
              "--with-zlib",
              "--disable-sdltest",
              "--enable-unicode",
              "--enable-display",
              "--enable-propgrid",
              "--disable-webkit",
              "--disable-webview",
              "--disable-webviewwebkit",
              "--with-expat=builtin",
              "--with-libiconv=/usr"
          ],
          "build-options" : {
              "cxxflags":"-std=c++0x"
          },
          "sources": [ 
            {  
                "type": "archive", 
                "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.4/wxWidgets-3.0.4.tar.bz2",
                "sha256":"96157f988d261b7368e5340afa1a0cad943768f35929c22841f62c25b17bf7f0"
            }
          ],
          "modules": [
              "shared-modules/glu/glu-9.0.0.json"
          ]
        },
        {
            "name": "libaio",
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "cleanup": [ "/include", "/lib/*.a" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://deb.debian.org/debian/pool/main/liba/libaio/libaio_0.3.110.orig.tar.gz",
                    "sha256": "e019028e631725729376250e32b473012f7cb68e1f7275bfc1bbcdd0f8745f7e"
                },
                {
                    "type": "patch",
                    "paths": [
                        "link-libs.patch",
                        "fix-install-dirs.patch",
                        "no-werror.patch",
                        "fix-build-flags.patch"
                    ]
                }
            ]
        },
        {
          "name": "portaudio",
          "cleanup": [ "/include", "/lib/pkgconfig", "/lib/*.la" ],
          "config-opts": [ "--disable-static" ],
          "sources": [
              {
                  "type": "archive",
                  "url": "http://www.portaudio.com/archives/pa_stable_v190600_20161030.tgz",
                  "sha256": "f5a21d7dcd6ee84397446fa1fa1a0675bb2e8a4a6dceb4305a8404698d8d1513"
              }
          ]
        },
        {
            "name": "soundtouch",
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.surina.net/soundtouch/soundtouch-1.9.2.tar.gz",
                    "sha256": "caeb86511e81420eeb454cb5db53f56d96b8451d37d89af6e55b12eb4da1c513"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/aclocal",
                "/share/doc",
                "/lib/*.la"
            ]
        },
        {
          "name": "png++",
          "disabled": true,
          "buildsystem": "simple",
          "build-commands": [
            "make",
            "make prefix=/app install"
          ],
          "sources": [
              {
                "type": "archive",
                "url": "https://download.savannah.nongnu.org/releases/pngpp/png++-0.2.9.tar.gz",
                "sha256": "abbc6a0565122b6c402d61743451830b4faee6ece454601c5711e1c1b4238791"
              }
          ]
        },
        "shared-modules/udev/udev-175.json",
        {
            "name": "pcsx2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DGTK3_API=TRUE",
                "-DPACKAGE_MODE=TRUE",
                "-DXDG_STD=TRUE",
                "-DDISABLE_BUILD_DATE=TRUE",
                "-DDISABLE_PCSX2_WRAPPER=TRUE",
                "-DDISABLE_ADVANCE_SIMD=TRUE",
                "-DOpenGL_GL_PREFERENCE=GLVND"
            ],
            "cleanup": [
                "/share/pixmaps",
                "/share/man",
                "/share/doc"
            ],
            "post-install": [
                "desktop-file-edit --set-key=Exec --set-value=PCSX2 /app/share/applications/PCSX2.desktop",
                "install -Dm644 pcsx2/gui/Resources/AppIcon64.png /app/share/icons/hicolor/64x64/apps/PCSX2.png",
                "install -Dm644 net.pcsx2.PCSX2.appdata.xml /app/share/appdata/net.pcsx2.PCSX2.appdata.xml"
            ],
            "sources": [
              {
                "type": "git",
                "url": "https://github.com/PCSX2/pcsx2.git",
                "commit": "d77d440a048cb625d664ac5b13b92b847783b1f6"
              },
              {
                "type": "shell",
                "//": "No option to disable the dev9ghzdrk feature? So lets just ignore the error when skipped.",
                "commands": [
                  "sed -i 's/print_dep(\"Skip build of dev9ghzdrk: missing dependencies\" \"${msg_dep_dev}\")//' cmake/SelectPcsx2Plugins.cmake"
                ]
              },
              {
                  "type": "file",
                  "path": "net.pcsx2.PCSX2.appdata.xml"
              }
            ]
        }
    ]
}
